---
const { project, featured = false } = Astro.props;
---
<article class="card" style={`padding: 16px; grid-column: ${featured ? "span 6" : "span 4"};`}>
  <h3 class="h2" style="margin-bottom: 6px;">{project.title}</h3>
  <p class="small" style="margin-top: 0;">{project.description}</p>

  {project.highlights && (
    <ul class="small" style="margin: 10px 0 12px; padding-left: 18px;">
      {project.highlights.map((h) => <li>{h}</li>)}
    </ul>
  )}

  <div style="display:flex; gap: 8px; flex-wrap: wrap; margin: 10px 0 12px;">
    {(project.tags || []).map((t) => <span class="tag">{t}</span>)}
  </div>

  <div style="display:flex; gap: 10px; flex-wrap: wrap;">
    {project.repo && <a class="btn" href={project.repo} target="_blank">Repo</a>}
    {project.demo && <a class="btn" href={project.demo} target="_blank">Demo</a>}
    {project.report && <a class="btn" href={project.report} target="_blank">Report</a>}
  </div>
</article>
