---
const NAME = "Tristan Lond√©";
const ROLE = "Data & Business Analyst";
const TAGLINE = "Turning raw data into decision-ready insights.";
const BIO =
  "Engineering student at ENIB focused on Data & Business Analytics. I build end-to-end analytics projects: from data prep and KPI design to dashboards and decision support.";

const LINKS = [
  { label: "GitHub", href: "https://github.com/TON_PSEUDO" },
  { label: "LinkedIn", href: "https://www.linkedin.com/in/tristanlond%C3%A9/" },
  { label: "CV", href: "/MyWebsite/cv_tristan_londe.pdf" } // adapte le /MyWebsite
];

// Mets ta photo ici : public/profile.jpg (ou .png)
const PHOTO = "/MyWebsite/profile.jpg"; // adapte le /MyWebsite
---

<header class="hero">
  <div class="container hero__inner">
    <div class="hero__left">
      <div class="badge">
        <span class="dot"></span>
        <span>{ROLE}</span>
      </div>

      <h1 class="hero__title">{NAME}</h1>
      <p class="hero__tagline">{TAGLINE}</p>
      <p class="hero__bio">{BIO}</p>

      <div class="hero__cta">
        {LINKS.map((l) => (
          <a class={`btn ${l.label === "CV" ? "primary" : ""}`} href={l.href} target={l.href.startsWith("http") ? "_blank" : undefined}>
            {l.label}
          </a>
        ))}
        <a class="btn ghost" href="#projects">View Projects</a>
      </div>

      <div class="hero__chips">
        <span class="chip">Python</span>
        <span class="chip">SQL</span>
        <span class="chip">Power BI</span>
        <span class="chip">Analytics</span>
        <span class="chip">Storytelling</span>
      </div>
    </div>

    <div class="hero__right">
      <div class="photoCard">
        <img src={PHOTO} alt={`${NAME} portrait`} loading="eager" />
      </div>

      <div class="quickLinks">
        <a class="pillLink" href="#projects">Featured</a>
        <a class="pillLink" href="#contact">Contact</a>
      </div>
    </div>
  </div>
</header>
